{
    "compilerOptions": {
        // 生成 commonjs 模块代码
        "module": "commonjs",
        // 使用 node 模块解析
        "moduleResolution": "node",
        // 使用 ES Module 方式解析模块
        "esModuleInterop": true,
        // 指定 ECMAScript 目标版本
        "target": "es6",
        // 输出路径
        "outDir": "dist",
        // 自动生成描述文件
        "declaration": true,
        // 编译过程中需要引入的库文件的列表
        "lib": ["es2016"],
        // 生成相应的 .map 文件
        "sourceMap": true,
        // 源码路径
        "rootDir": "src",
        // 启用所有严格类型检查选项
        "strict": false,
        // 在表达式和声明上有隐含的 any 类型时报错
        "noImplicitAny": true,
        // 当 this 表达式的值为 any 类型的时候，生成一个错误
        "noImplicitThis": true,
        // 若有未使用的局部变量则抛错
        "noUnusedLocals": true,
        // 不是函数的所有返回路径都有返回值时报错
        "noImplicitReturns": true,
        // 不允许switch的case语句贯穿
        "noFallthroughCasesInSwitch": true,
        // 启用实验性的ES装饰器
        "experimentalDecorators": true,
        // 解析 JSON 模块
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts"]
}